doctype html
html
  head
    title Contacts-Login
    link(rel='stylesheet', type='text/css', href='/stylesheets/signUpStyle.css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src='/scripts/signup.js')

  body
    .container
      .card.card-container
        img#profile-img.profile-img-card(src='//ssl.gstatic.com/accounts/ui/avatar_2x.png')
        p#profile-name.profile-name-card
          form.form-signin(action='/signup', method="POST")
            span#reauth-email.reauth-email
            input#inputuser.form-control(type='text', placeholder='Username', required='', autofocus='' name='username')
            input#inputPassword.form-control(type='password', placeholder='Password', required='' name='password')
            input#inputPassword.form-control(type='password', placeholder='Re-enter Password', required='' name='password')
            input#inputPassword.form-control(type='text', placeholder='email, required='' name='email')
            input#inputLanguage.form-control(type='text', placeholder='Language', name='languageName')
            select#level.form-control(name='level')
              option(value='Beginner') Beginner
              option(value='Intermediate') Intermediate
              option(value='Proficient') Proficient

            input#addButton(type='button' value="ADD" name="addButton")
            br
            div#languageList            
            br
            button#signup.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') Sign Up
            input#hiddenData(type='hidden' name="languageList")